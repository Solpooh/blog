{
  "projectName": "YTPeek Design Theme",
  "description": "Professional YouTube analytics platform design system inspired by ytpeek.com",
  "version": "1.0.0",
  
  "colors": {
    "primary": {
      "main": "#6366f1",
      "light": "#818cf8",
      "dark": "#4f46e5",
      "gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)"
    },
    "secondary": {
      "main": "#8b5cf6",
      "light": "#a78bfa",
      "dark": "#7c3aed"
    },
    "accent": {
      "orange": "#f97316",
      "pink": "#ec4899",
      "cyan": "#06b6d4"
    },
    "neutral": {
      "50": "#fafafa",
      "100": "#f5f5f5",
      "200": "#e5e5e5",
      "300": "#d4d4d4",
      "400": "#a3a3a3",
      "500": "#737373",
      "600": "#525252",
      "700": "#404040",
      "800": "#262626",
      "900": "#171717",
      "950": "#0a0a0a"
    },
    "background": {
      "primary": "#ffffff",
      "secondary": "#fafafa",
      "dark": "#0f172a",
      "card": "#ffffff",
      "cardHover": "#f8fafc"
    },
    "text": {
      "primary": "#0f172a",
      "secondary": "#64748b",
      "tertiary": "#94a3b8",
      "inverse": "#ffffff",
      "muted": "#cbd5e1"
    },
    "border": {
      "light": "#e2e8f0",
      "medium": "#cbd5e1",
      "dark": "#94a3b8"
    },
    "success": "#10b981",
    "warning": "#f59e0b",
    "error": "#ef4444",
    "info": "#3b82f6"
  },
  
  "typography": {
    "fontFamily": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif",
      "heading": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
      "mono": "'Fira Code', 'Consolas', 'Monaco', 'Courier New', monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem",
      "7xl": "4.5rem"
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75,
      "loose": 2
    },
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em",
      "wider": "0.05em"
    }
  },
  
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem",
    "32": "8rem"
  },
  
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "base": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },
  
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1)",
    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.05)",
    "glow": "0 0 20px rgba(99, 102, 241, 0.3)"
  },
  
  "animations": {
    "duration": {
      "fast": "150ms",
      "base": "200ms",
      "medium": "300ms",
      "slow": "500ms",
      "slower": "700ms"
    },
    "easing": {
      "linear": "linear",
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
      "smooth": "cubic-bezier(0.25, 0.1, 0.25, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "keyframes": {
      "fadeIn": {
        "from": { "opacity": 0 },
        "to": { "opacity": 1 }
      },
      "fadeInUp": {
        "from": { 
          "opacity": 0,
          "transform": "translateY(20px)"
        },
        "to": { 
          "opacity": 1,
          "transform": "translateY(0)"
        }
      },
      "scaleIn": {
        "from": { 
          "opacity": 0,
          "transform": "scale(0.95)"
        },
        "to": { 
          "opacity": 1,
          "transform": "scale(1)"
        }
      },
      "slideInRight": {
        "from": {
          "transform": "translateX(100%)",
          "opacity": 0
        },
        "to": {
          "transform": "translateX(0)",
          "opacity": 1
        }
      },
      "shimmer": {
        "0%": {
          "backgroundPosition": "-1000px 0"
        },
        "100%": {
          "backgroundPosition": "1000px 0"
        }
      },
      "pulse": {
        "0%, 100%": {
          "opacity": 1
        },
        "50%": {
          "opacity": 0.7
        }
      },
      "float": {
        "0%, 100%": {
          "transform": "translateY(0)"
        },
        "50%": {
          "transform": "translateY(-10px)"
        }
      }
    }
  },
  
  "components": {
    "button": {
      "primary": {
        "background": "#6366f1",
        "backgroundHover": "#4f46e5",
        "color": "#ffffff",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontSize": "1rem",
        "fontWeight": 600,
        "transition": "all 200ms cubic-bezier(0.4, 0, 0.2, 1)",
        "shadow": "0 4px 6px -1px rgba(99, 102, 241, 0.3)",
        "shadowHover": "0 10px 15px -3px rgba(99, 102, 241, 0.4)",
        "transform": "translateY(0)",
        "transformHover": "translateY(-2px)"
      },
      "secondary": {
        "background": "transparent",
        "backgroundHover": "#f5f5f5",
        "color": "#0f172a",
        "border": "1px solid #e2e8f0",
        "borderHover": "1px solid #cbd5e1",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontSize": "1rem",
        "fontWeight": 600,
        "transition": "all 200ms cubic-bezier(0.4, 0, 0.2, 1)"
      },
      "ghost": {
        "background": "transparent",
        "backgroundHover": "#f5f5f5",
        "color": "#64748b",
        "colorHover": "#0f172a",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontSize": "1rem",
        "fontWeight": 500,
        "transition": "all 200ms cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "card": {
      "background": "#ffffff",
      "backgroundHover": "#fafafa",
      "border": "1px solid #e2e8f0",
      "borderRadius": "1rem",
      "padding": "1.5rem",
      "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
      "shadowHover": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "transition": "all 300ms cubic-bezier(0.4, 0, 0.2, 1)",
      "transform": "translateY(0)",
      "transformHover": "translateY(-4px)"
    },
    "input": {
      "background": "#ffffff",
      "backgroundFocus": "#ffffff",
      "border": "1px solid #e2e8f0",
      "borderFocus": "1px solid #6366f1",
      "borderRadius": "0.5rem",
      "padding": "0.75rem 1rem",
      "fontSize": "1rem",
      "color": "#0f172a",
      "placeholder": "#94a3b8",
      "shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "shadowFocus": "0 0 0 3px rgba(99, 102, 241, 0.1)",
      "transition": "all 200ms cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "badge": {
      "primary": {
        "background": "#ede9fe",
        "color": "#6366f1",
        "padding": "0.25rem 0.75rem",
        "borderRadius": "9999px",
        "fontSize": "0.875rem",
        "fontWeight": 500
      },
      "success": {
        "background": "#d1fae5",
        "color": "#059669",
        "padding": "0.25rem 0.75rem",
        "borderRadius": "9999px",
        "fontSize": "0.875rem",
        "fontWeight": 500
      },
      "popular": {
        "background": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
        "color": "#ffffff",
        "padding": "0.25rem 0.75rem",
        "borderRadius": "9999px",
        "fontSize": "0.875rem",
        "fontWeight": 600
      }
    }
  },
  
  "layout": {
    "container": {
      "maxWidth": "1280px",
      "padding": "0 1rem",
      "margin": "0 auto"
    },
    "hero": {
      "minHeight": "100vh",
      "display": "flex",
      "alignItems": "center",
      "justifyContent": "center",
      "padding": "4rem 0"
    },
    "section": {
      "padding": "5rem 0",
      "minHeight": "auto"
    },
    "grid": {
      "columns": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 3,
        "wide": 4
      },
      "gap": "2rem"
    }
  },
  
  "breakpoints": {
    "xs": "320px",
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  
  "hoverEffects": {
    "cardHover": {
      "transform": "translateY(-4px)",
      "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "transition": "all 300ms cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "buttonHover": {
      "transform": "translateY(-2px)",
      "shadow": "0 10px 15px -3px rgba(99, 102, 241, 0.4)",
      "transition": "all 200ms cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "linkHover": {
      "color": "#6366f1",
      "textDecoration": "none",
      "transition": "color 150ms cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "iconHover": {
      "transform": "scale(1.1) rotate(5deg)",
      "transition": "transform 200ms cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "imageHover": {
      "transform": "scale(1.05)",
      "transition": "transform 500ms cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  
  "fullScreenComponents": {
    "hero": {
      "display": "flex",
      "flexDirection": "column",
      "alignItems": "center",
      "justifyContent": "center",
      "minHeight": "100vh",
      "padding": "2rem",
      "textAlign": "center"
    },
    "section": {
      "display": "flex",
      "flexDirection": "column",
      "minHeight": "100vh",
      "padding": "5rem 2rem"
    },
    "features": {
      "display": "grid",
      "minHeight": "100vh",
      "padding": "5rem 2rem",
      "alignContent": "center"
    }
  },
  
  "gradients": {
    "primary": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
    "secondary": "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
    "warm": "linear-gradient(135deg, #f97316 0%, #ec4899 100%)",
    "cool": "linear-gradient(135deg, #06b6d4 0%, #6366f1 100%)",
    "sunset": "linear-gradient(135deg, #fa709a 0%, #fee140 100%)",
    "ocean": "linear-gradient(135deg, #2e3192 0%, #1bffff 100%)",
    "mesh": "radial-gradient(at 40% 20%, hsla(240, 100%, 70%, 0.5) 0px, transparent 50%), radial-gradient(at 80% 0%, hsla(280, 100%, 70%, 0.5) 0px, transparent 50%), radial-gradient(at 0% 50%, hsla(340, 100%, 70%, 0.5) 0px, transparent 50%)"
  },
  
  "accessibility": {
    "focusRing": {
      "color": "#6366f1",
      "width": "2px",
      "offset": "2px",
      "style": "solid"
    },
    "skipLink": {
      "position": "absolute",
      "left": "-9999px",
      "zIndex": 999,
      "padding": "1rem",
      "background": "#6366f1",
      "color": "#ffffff",
      "textDecoration": "none"
    }
  },
  
  "effects": {
    "glassmorphism": {
      "background": "rgba(255, 255, 255, 0.7)",
      "backdropFilter": "blur(10px)",
      "border": "1px solid rgba(255, 255, 255, 0.3)"
    },
    "neumorphism": {
      "background": "#f5f5f5",
      "boxShadow": "8px 8px 16px #d1d1d1, -8px -8px 16px #ffffff"
    },
    "parallax": {
      "transform": "translateY(var(--scroll-offset))",
      "willChange": "transform"
    }
  }
}
